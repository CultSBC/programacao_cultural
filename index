import React, { useState, useEffect } from 'react';
import { Calendar, Plus, Search, Filter, FileText, Users, Clock, CheckCircle, XCircle, AlertCircle, BarChart3, Download, Eye, Edit, Trash2, Upload, Send, Menu, X, Home, List, Settings, Bell } from 'lucide-react';

const SistemaProgramacaoCultural = () => {
  const [activeTab, setActiveTab] = useState('dashboard');
  const [eventos, setEventos] = useState([]);
  const [filtros, setFiltros] = useState({ status: 'todos', local: 'todos', mes: 'todos' });
  const [showModal, setShowModal] = useState(false);
  const [modalType, setModalType] = useState('');
  const [eventoSelecionado, setEventoSelecionado] = useState(null);
  const [sidebarOpen, setSidebarOpen] = useState(true);
  const [notificacoes, setNotificacoes] = useState(3);

  // Dados iniciais simulados
  useEffect(() => {
    const eventosIniciais = [
      {
        id: 1,
        nome: 'Ocupação CCAA - 4 Pontos e 1 Pesponto',
        local: 'CCAA - Câmara de Cultura Antonino Assumpção',
        dataInicio: '2025-01-21',
        dataFim: '2025-01-25',
        horario: '10:00 - 18:00',
        status: 'concluído',
        descricao: 'Ocupação por coletivos de Economia Criativa',
        solicitante: 'Fabio',
        responsavel: 'Fabio',
        publicoAlcancado: 271,
        setor: {
          apoio: 'aprovado',
          divulgacao: 'aprovado',
          contratos: 'aprovado'
        }
      },
      {
        id: 2,
        nome: 'Bruna Louise - Ela Tá Correndo Atrás',
        local: 'TLG - Teatro Lauro Gomes',
        dataInicio: '2025-01-24',
        dataFim: '2025-01-24',
        horario: '19:00 - 22:00',
        status: 'concluído',
        descricao: 'Show de humor',
        solicitante: 'Fernando',
        responsavel: "Criativu's Produções",
        publicoAlcancado: 0,
        setor: {
          apoio: 'aprovado',
          divulgacao: 'aprovado',
          contratos: 'aprovado'
        }
      },
      {
        id: 3,
        nome: 'Beatles 4ever',
        local: 'TLG - Teatro Lauro Gomes',
        dataInicio: '2025-01-25',
        dataFim: '2025-01-25',
        horario: '21:00 - 22:30',
        status: 'concluído',
        descricao: 'Espetáculo Musical',
        solicitante: 'Fernando',
        responsavel: 'Beatles 4Ever',
        publicoAlcancado: 0,
        setor: {
          apoio: 'aprovado',
          divulgacao: 'aprovado',
          contratos: 'aprovado'
        }
      },
      {
        id: 4,
        nome: 'Festival de Inverno 2025',
        local: 'Parque da Juventude',
        dataInicio: '2025-07-15',
        dataFim: '2025-07-20',
        horario: '14:00 - 22:00',
        status: 'em análise',
        descricao: 'Festival cultural com múltiplas atividades',
        solicitante: 'Maria Silva',
        responsavel: 'Maria Silva',
        publicoAlcancado: 0,
        setor: {
          apoio: 'pendente',
          divulgacao: 'pendente',
          contratos: 'pendente'
        }
      },
      {
        id: 5,
        nome: 'Oficina de Teatro Infantil',
        local: 'TER - Teatro Elis Regina',
        dataInicio: '2025-03-10',
        dataFim: '2025-03-15',
        horario: '09:00 - 12:00',
        status: 'aprovado',
        descricao: 'Oficina gratuita para crianças de 7 a 12 anos',
        solicitante: 'João Pedro',
        responsavel: 'Cia Teatral',
        publicoAlcancado: 0,
        setor: {
          apoio: 'aprovado',
          divulgacao: 'em análise',
          contratos: 'aprovado'
        }
      }
    ];
    setEventos(eventosIniciais);
  }, []);

  const statusConfig = {
    'concluído': { cor: 'bg-green-100 text-green-800', icon: CheckCircle },
    'aprovado': { cor: 'bg-blue-100 text-blue-800', icon: CheckCircle },
    'em análise': { cor: 'bg-yellow-100 text-yellow-800', icon: AlertCircle },
    'cancelado': { cor: 'bg-red-100 text-red-800', icon: XCircle },
    'pendente': { cor: 'bg-gray-100 text-gray-800', icon: Clock }
  };

  const locaisDisponiveis = [
    'CCAA - Câmara de Cultura Antonino Assumpção',
    'TLG - Teatro Lauro Gomes',
    'TER - Teatro Elis Regina',
    'Pinacoteca de São Bernardo do Campo',
    'Parque da Juventade',
    'Centro Cultural'
  ];

  const eventosFiltrados = eventos.filter(evento => {
    const statusMatch = filtros.status === 'todos' || evento.status === filtros.status;
    const localMatch = filtros.local === 'todos' || evento.local === filtros.local;
    return statusMatch && localMatch;
  });

  const stats = {
    total: eventos.length,
    aprovados: eventos.filter(e => e.status === 'aprovado').length,
    emAnalise: eventos.filter(e => e.status === 'em análise').length,
    concluidos: eventos.filter(e => e.status === 'concluído').length
  };

  const abrirModal = (tipo, evento = null) => {
    setModalType(tipo);
    setEventoSelecionado(evento);
    setShowModal(true);
  };

  const fecharModal = () => {
    setShowModal(false);
    setEventoSelecionado(null);
  };

  const salvarEvento = (novoEvento) => {
    if (eventoSelecionado) {
      setEventos(eventos.map(e => e.id === eventoSelecionado.id ? { ...novoEvento, id: e.id } : e));
    } else {
      setEventos([...eventos, { ...novoEvento, id: Date.now() }]);
    }
    fecharModal();
  };

  const excluirEvento = (id) => {
    if (confirm('Tem certeza que deseja excluir este evento?')) {
      setEventos(eventos.filter(e => e.id !== id));
    }
  };

  return (
    <div className="min-h-screen bg-gray-50 flex">
      {/* Sidebar */}
      <div className={`${sidebarOpen ? 'w-64' : 'w-20'} bg-gradient-to-b from-blue-900 to-blue-800 text-white transition-all duration-300 flex flex-col`}>
        <div className="p-4 border-b border-blue-700 flex items-center justify-between">
          {sidebarOpen && (
            <div>
              <h1 className="font-bold text-lg">Sistema de Cultura</h1>
              <p className="text-xs text-blue-200">São Bernardo do Campo</p>
            </div>
          )}
          <button onClick={() => setSidebarOpen(!sidebarOpen)} className="p-2 hover:bg-blue-700 rounded">
            {sidebarOpen ? <X size={20} /> : <Menu size={20} />}
          </button>
        </div>

        <nav className="flex-1 p-4">
          <button
            onClick={() => setActiveTab('dashboard')}
            className={`w-full flex items-center gap-3 p-3 rounded mb-2 transition ${
              activeTab === 'dashboard' ? 'bg-blue-700' : 'hover:bg-blue-700'
            }`}
          >
            <Home size={20} />
            {sidebarOpen && <span>Dashboard</span>}
          </button>
          <button
            onClick={() => setActiveTab('eventos')}
            className={`w-full flex items-center gap-3 p-3 rounded mb-2 transition ${
              activeTab === 'eventos' ? 'bg-blue-700' : 'hover:bg-blue-700'
            }`}
          >
            <List size={20} />
            {sidebarOpen && <span>Eventos</span>}
          </button>
          <button
            onClick={() => setActiveTab('calendario')}
            className={`w-full flex items-center gap-3 p-3 rounded mb-2 transition ${
              activeTab === 'calendario' ? 'bg-blue-700' : 'hover:bg-blue-700'
            }`}
          >
            <Calendar size={20} />
            {sidebarOpen && <span>Calendário</span>}
          </button>
          <button
            onClick={() => setActiveTab('relatorios')}
            className={`w-full flex items-center gap-3 p-3 rounded mb-2 transition ${
              activeTab === 'relatorios' ? 'bg-blue-700' : 'hover:bg-blue-700'
            }`}
          >
            <BarChart3 size={20} />
            {sidebarOpen && <span>Relatórios</span>}
          </button>
        </nav>

        <div className="p-4 border-t border-blue-700">
          <div className="flex items-center gap-3">
            <div className="w-10 h-10 bg-blue-600 rounded-full flex items-center justify-center">
              <Users size={20} />
            </div>
            {sidebarOpen && (
              <div className="flex-1">
                <p className="text-sm font-medium">Usuário Admin</p>
                <p className="text-xs text-blue-200">Secretaria de Cultura</p>
              </div>
            )}
          </div>
        </div>
      </div>

      {/* Conteúdo Principal */}
      <div className="flex-1 flex flex-col">
        {/* Header */}
        <header className="bg-white border-b border-gray-200 px-6 py-4">
          <div className="flex items-center justify-between">
            <div>
              <h2 className="text-2xl font-bold text-gray-800">
                {activeTab === 'dashboard' && 'Dashboard'}
                {activeTab === 'eventos' && 'Gestão de Eventos'}
                {activeTab === 'calendario' && 'Calendário de Eventos'}
                {activeTab === 'relatorios' && 'Relatórios'}
              </h2>
              <p className="text-gray-600 text-sm">Programação Cultural de São Bernardo do Campo</p>
            </div>
            <div className="flex items-center gap-4">
              <div className="relative">
                <Bell size={20} className="text-gray-600 cursor-pointer" />
                {notificacoes > 0 && (
                  <span className="absolute -top-1 -right-1 bg-red-500 text-white text-xs w-5 h-5 rounded-full flex items-center justify-center">
                    {notificacoes}
                  </span>
                )}
              </div>
              {activeTab === 'eventos' && (
                <button
                  onClick={() => abrirModal('novo')}
                  className="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg flex items-center gap-2 transition"
                >
                  <Plus size={20} />
                  Novo Evento
                </button>
              )}
            </div>
          </div>
        </header>

        {/* Conteúdo */}
        <main className="flex-1 p-6 overflow-auto">
          {/* Dashboard */}
          {activeTab === 'dashboard' && (
            <div>
              <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-6">
                <div className="bg-white rounded-lg shadow p-6 border-l-4 border-blue-500">
                  <div className="flex items-center justify-between">
                    <div>
                      <p className="text-gray-600 text-sm">Total de Eventos</p>
                      <p className="text-3xl font-bold text-gray-800">{stats.total}</p>
                    </div>
                    <div className="bg-blue-100 p-3 rounded-full">
                      <Calendar className="text-blue-600" size={24} />
                    </div>
                  </div>
                </div>

                <div className="bg-white rounded-lg shadow p-6 border-l-4 border-green-500">
                  <div className="flex items-center justify-between">
                    <div>
                      <p className="text-gray-600 text-sm">Aprovados</p>
                      <p className="text-3xl font-bold text-gray-800">{stats.aprovados}</p>
                    </div>
                    <div className="bg-green-100 p-3 rounded-full">
                      <CheckCircle className="text-green-600" size={24} />
                    </div>
                  </div>
                </div>

                <div className="bg-white rounded-lg shadow p-6 border-l-4 border-yellow-500">
                  <div className="flex items-center justify-between">
                    <div>
                      <p className="text-gray-600 text-sm">Em Análise</p>
                      <p className="text-3xl font-bold text-gray-800">{stats.emAnalise}</p>
                    </div>
                    <div className="bg-yellow-100 p-3 rounded-full">
                      <AlertCircle className="text-yellow-600" size={24} />
                    </div>
                  </div>
                </div>

                <div className="bg-white rounded-lg shadow p-6 border-l-4 border-purple-500">
                  <div className="flex items-center justify-between">
                    <div>
                      <p className="text-gray-600 text-sm">Concluídos</p>
                      <p className="text-3xl font-bold text-gray-800">{stats.concluidos}</p>
                    </div>
                    <div className="bg-purple-100 p-3 rounded-full">
                      <CheckCircle className="text-purple-600" size={24} />
                    </div>
                  </div>
                </div>
              </div>

              <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div className="bg-white rounded-lg shadow p-6">
                  <h3 className="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <Clock size={20} />
                    Próximos Eventos
                  </h3>
                  <div className="space-y-3">
                    {eventos.filter(e => e.status !== 'concluído' && e.status !== 'cancelado').slice(0, 5).map(evento => (
                      <div key={evento.id} className="border-l-4 border-blue-500 pl-4 py-2">
                        <p className="font-medium text-gray-800">{evento.nome}</p>
                        <div className="flex items-center gap-4 text-sm text-gray-600 mt-1">
                          <span>{new Date(evento.dataInicio).toLocaleDateString('pt-BR')}</span>
                          <span>{evento.local}</span>
                        </div>
                      </div>
                    ))}
                  </div>
                </div>

                <div className="bg-white rounded-lg shadow p-6">
                  <h3 className="text-lg font-bold text-gray-800 mb-4 flex items-center gap-2">
                    <AlertCircle size={20} />
                    Pendências
                  </h3>
                  <div className="space-y-3">
                    {eventos.filter(e => e.setor.apoio === 'pendente' || e.setor.divulgacao === 'pendente' || e.setor.contratos === 'pendente').map(evento => (
                      <div key={evento.id} className="border-l-4 border-yellow-500 pl-4 py-2">
                        <p className="font-medium text-gray-800">{evento.nome}</p>
                        <div className="flex gap-2 mt-2">
                          {evento.setor.apoio === 'pendente' && (
                            <span className="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Apoio</span>
                          )}
                          {evento.setor.divulgacao === 'pendente' && (
                            <span className="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Divulgação</span>
                          )}
                          {evento.setor.contratos === 'pendente' && (
                            <span className="text-xs bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Contratos</span>
                          )}
                        </div>
                      </div>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Lista de Eventos */}
          {activeTab === 'eventos' && (
            <div>
              {/* Filtros */}
              <div className="bg-white rounded-lg shadow p-4 mb-6">
                <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">Status</label>
                    <select
                      value={filtros.status}
                      onChange={(e) => setFiltros({ ...filtros, status: e.target.value })}
                      className="w-full border border-gray-300 rounded-lg px-3 py-2"
                    >
                      <option value="todos">Todos</option>
                      <option value="em análise">Em Análise</option>
                      <option value="aprovado">Aprovado</option>
                      <option value="concluído">Concluído</option>
                      <option value="cancelado">Cancelado</option>
                    </select>
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">Local</label>
                    <select
                      value={filtros.local}
                      onChange={(e) => setFiltros({ ...filtros, local: e.target.value })}
                      className="w-full border border-gray-300 rounded-lg px-3 py-2"
                    >
                      <option value="todos">Todos</option>
                      {locaisDisponiveis.map(local => (
                        <option key={local} value={local}>{local}</option>
                      ))}
                    </select>
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">Buscar</label>
                    <div className="relative">
                      <Search className="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400" size={20} />
                      <input
                        type="text"
                        placeholder="Buscar evento..."
                        className="w-full border border-gray-300 rounded-lg pl-10 pr-3 py-2"
                      />
                    </div>
                  </div>
                </div>
              </div>

              {/* Tabela de Eventos */}
              <div className="bg-white rounded-lg shadow overflow-hidden">
                <table className="w-full">
                  <thead className="bg-gray-50 border-b border-gray-200">
                    <tr>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Evento</th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Local</th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Data</th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Setores</th>
                      <th className="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Ações</th>
                    </tr>
                  </thead>
                  <tbody className="divide-y divide-gray-200">
                    {eventosFiltrados.map(evento => {
                      const StatusIcon = statusConfig[evento.status]?.icon || AlertCircle;
                      return (
                        <tr key={evento.id} className="hover:bg-gray-50">
                          <td className="px-6 py-4">
                            <div>
                              <p className="font-medium text-gray-900">{evento.nome}</p>
                              <p className="text-sm text-gray-500">{evento.solicitante}</p>
                            </div>
                          </td>
                          <td className="px-6 py-4 text-sm text-gray-600">{evento.local}</td>
                          <td className="px-6 py-4 text-sm text-gray-600">
                            {new Date(evento.dataInicio).toLocaleDateString('pt-BR')}
                          </td>
                          <td className="px-6 py-4">
                            <span className={`inline-flex items-center gap-1 px-3 py-1 rounded-full text-sm font-medium ${statusConfig[evento.status]?.cor}`}>
                              <StatusIcon size={16} />
                              {evento.status}
                            </span>
                          </td>
                          <td className="px-6 py-4">
                            <div className="flex gap-1">
                              <span className={`w-2 h-2 rounded-full ${evento.setor.apoio === 'aprovado' ? 'bg-green-500' : evento.setor.apoio === 'em análise' ? 'bg-yellow-500' : 'bg-gray-300'}`} title="Apoio"></span>
                              <span className={`w-2 h-2 rounded-full ${evento.setor.divulgacao === 'aprovado' ? 'bg-green-500' : evento.setor.divulgacao === 'em análise' ? 'bg-yellow-500' : 'bg-gray-300'}`} title="Divulgação"></span>
                              <span className={`w-2 h-2 rounded-full ${evento.setor.contratos === 'aprovado' ? 'bg-green-500' : evento.setor.contratos === 'em análise' ? 'bg-yellow-500' : 'bg-gray-300'}`} title="Contratos"></span>
                            </div>
                          </td>
                          <td className="px-6 py-4">
                            <div className="flex gap-2">
                              <button
                                onClick={() => abrirModal('visualizar', evento)}
                                className="text-blue-600 hover:text-blue-800"
                                title="Visualizar"
                              >
                                <Eye size={18} />
                              </button>
                              <button
                                onClick={() => abrirModal('editar', evento)}
                                className="text-green-600 hover:text-green-800"
                                title="Editar"
                              >
                                <Edit size={18} />
                              </button>
                              <button
                                onClick={() => excluirEvento(evento.id)}
                                className="text-red-600 hover:text-red-800"
                                title="Excluir"
                              >
                                <Trash2 size={18} />
                              </button>
                            </div>
                          </td>
                        </tr>
                      );
                    })}
                  </tbody>
                </table>
              </div>
            </div>
          )}

          {/* Calendário */}
          {activeTab === 'calendario' && (
            <div className="bg-white rounded-lg shadow p-6">
              <div className="flex items-center justify-between mb-6">
                <h3 className="text-xl font-bold text-gray-800">Janeiro 2025</h3>
                <div className="flex gap-2">
                  <button className="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Anterior</button>
                  <button className="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">Próximo</button>
                </div>
              </div>
              <div className="grid grid-cols-7 gap-2">
                {['Dom', 'Seg', 'Ter', 'Qua', 'Qui', 'Sex', 'Sáb'].map(dia => (
                  <div key={dia} className="text-center font-medium text-gray-600 py-2">{dia}</div>
                ))}
                {Array.from({ length: 31 }, (_, i) => i + 1).map(dia => {
                  const eventoDia = eventos.find(e => new Date(e.dataInicio).getDate() === dia);
                  return (
                    <div key={dia} className={`border rounded p-2 h-20 ${eventoDia ? 'bg-blue-50 border-blue-200' : 'border-gray-200'}`}>
                      <div className="font-medium text-sm text-gray-700">{dia}</div>
                      {eventoDia && (
                        <div className="text-xs text-blue-600 mt-1 truncate">{eventoDia.nome}</div>
                      )}
                    </div>
                  );
                })}
              </div>
            </div>
          )}

          {/* Relatórios */}
          {activeTab === 'relatorios' && (
            <div className="space-y-6">
              <div className="bg-white rounded-lg shadow p-6">
                <div className="flex items-center justify-between mb-4">
                  <h3 className="text-lg font-bold text-gray-800">Gerar Relatório</h3>
                  <button className="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg flex items-center gap-2">
                    <Download size={20} />
                    Exportar Excel
                  </button>
                </div>
                <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">Período</label>
                    <input type="date" className="w-full border border-gray-300 rounded-lg px-3 py-2" />
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">Até</label>
                    <input type="date" className="w-full border border-gray-300 rounded-lg px-3 py-2" />
                  </div>
                  <div>
                    <label className="block text-sm font-medium text-gray-700 mb-2">Tipo</label>
                    <select className="w-full border border-gray-300 rounded-lg px-3 py-2">
                      <option>Todos os Eventos</option>
                      <option>Por Status</option>
                      <option>Por Local</option>
                      <option>Público Alcançado</option>
                    </select>
                  </div>
                </div>
              </div>

              <div className="bg-white rounded-lg shadow p-6">
                <h3 className="text-lg font-bold text-gray-800 mb-4">Estatísticas do Período</h3>
                <div className="grid grid-cols-1 md:grid-cols-3 gap-4">
                  <div className="border rounded-lg p-4">
                    <p className="text-gray-600 text-sm mb-2">Total de Eventos</p>
                    <p className="text-3xl font-bold text-blue-600">{eventos.length}</p>
                  </div>
                  <div className="border rounded-lg p-4">
                    <p className="text-gray-600 text-sm mb-2">Público Total</p>
                    <p className="text-3xl font-bold text-green-600">
                      {eventos.reduce((sum, e) => sum + e.publicoAlcancado, 0)}
                    </p>
                  </div>
                  <div className="border rounded-lg p-4">
                    <p className="text-gray-600 text-sm mb-
